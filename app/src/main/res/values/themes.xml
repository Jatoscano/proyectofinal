<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ProyectoFinal" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.ProyectoFinal" parent="Base.Theme.ProyectoFinal" />

    <!--Estilos Botones-->
    <style name="btn_login">
        <item name="buttonStyle">@style/ThemeOverlay.Material3.Button.ElevatedButton</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:text">@string/btn_login_text</item>
        <item name="android:textColor">@color/ivory</item>
        <item name="fontFamily">@font/allerta</item>
        <item name="android:drawableLeft">@drawable/login</item>
        <item name="android:drawableTint">@color/ivory</item>
        <item name="android:elevation">5dp</item>
        <item name="android:backgroundTint">@color/office_green</item>
    </style>

    <style name="btn_sign_up">
        <item name="android:buttonStyle">@style/Widget.Material3.Button.OutlinedButton</item>
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:text">@string/btn_sign_up_text</item>
        <item name="android:textColor">@color/hunter_green</item>
        <item name="android:fontFamily">@font/allerta</item>
        <item name="android:drawableLeft">@drawable/app_registration</item>
        <item name="android:drawableTint">@color/hunter_green</item>
        <item name="android:backgroundTint">@color/transparent</item>
    </style>

    <style name="btn_sign_up_registration">
        <item name="android:buttonStyle">@style/Widget.Material3.Button.TonalButton</item>
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:backgroundTint">@color/cerulean</item>
        <item name="android:text">@string/btn_sign_up_text</item>
        <item name="android:textColor">@color/ivory</item>
        <item name="android:drawableLeft">@drawable/sync_saved_locally</item>
        <item name="android:drawableTint">@color/ivory</item>
    </style>

    <style name="btn_confirm_continue">
        <item name="android:buttonStyle">@style/Widget.Material3.Button.TextButton</item>
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/btn_continue</item>
        <item name="android:textSize">@dimen/txt_name_size_title_3</item>
        <item name="android:textColor">@color/hunter_green</item>
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:state_focused">true</item>
    </style>


    <!--Estilos Imagenes-->
    <style name="img_shape_login">
        <item name="cornerSize">50%</item>
    </style>

    <style name="img_shape_sign_up">
        <item name="cornerSize">50%</item>
    </style>

    <!--Estilos Textos-->
    <style name="txt_confirm_congratulation">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:text">@string/txt_congratulation</item>
        <item name="android:textSize">@dimen/txt_name_size_title_1</item>
    </style>

    <style name="txt_confirm_access">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:text">@string/txt_confirm_text</item>
        <item name="android:textSize">@dimen/txt_name_size_title_2</item>
    </style>

</resources>